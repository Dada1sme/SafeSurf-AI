{
  "manifest_version": 3,
  "name": "SafeSurf AI Guard",
  "description": "실시간으로 현재 접속한 웹사이트를 SafeSurf AI 백엔드에 분석 요청해 피싱 위험을 알려주는 확장 프로그램입니다.",
  "version": "0.1.0",
  "permissions": ["tabs", "storage"],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://safesurf.local/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "SafeSurf AI Guard",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
